<%- include("includes/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/edit-blog.css">
    <script src="/js/edit-blog.js" defer></script>
    <title>Edit Blog</title>
</head>
<body>
    <div id="mainPage"> 
        <div id="editPage">
            <div id="editContainer">
                <h1>Edit Blog</h1>
                <form id="editForm" method="post">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" placeholder="Enter blog title" value="<%= locals.blogData === undefined ? '' : blogData.title %>" required>

                    <label for="description">Description</label>
                    <textarea id="description" name="description" rows="4" placeholder="Write your description here..." required><%= locals.blogData === undefined ? '' : blogData.description %></textarea>
                    
                    <label for="content">Content</label>
                    <textarea id="content" name="content" rows="10" placeholder="Write your content here..." required><%= locals.blogData === undefined ? '' : blogData.content %></textarea>
                    
                    <input name="UUID" type="hidden" value="<%= locals.blogData === undefined ? '' : blogData.UUID %>" readonly>
                    <!-- <label for="image">Update Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
     -->
                    <div id="formButtons">
                        <button type="submit" id="saveBtn">Save Changes</button>
                        <button type="button" id="cancelBtn" onclick="window.history.back();">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
<%- include("includes/footer.ejs") %>

